<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="90dp"
    android:orientation="horizontal" android:background="@color/skybg"
    android:layout_marginBottom="5dp" android:visibility="visible">

    <!--  显示城市名、实况温度、天气 -->
    <TextView
        android:id="@+id/city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:text="深圳"
        android:textSize="36sp"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/degree_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="21"
            android:textSize="40sp"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="大雨"
            android:layout_gravity="center"
            android:textColor="#fff" />

    </LinearLayout>

    <ImageView
        android:id="@+id/delete_item"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/canel"
        android:visibility="invisible"
        />

</RelativeLayout>

